<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.rps.controllers.CreateAccountWindow"
          prefHeight="400.0" prefWidth="600.0" alignment="CENTER" vgap="10" hgap="10">

<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

<Label text="Användarnamn:"
       GridPane.columnIndex="0" GridPane.rowIndex="1"/>

<TextField fx:id="username"
       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

<Label text="Lösenord:"
       GridPane.columnIndex="0" GridPane.rowIndex="2"/>

<PasswordField fx:id="passwordField"
       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

<Label text="Upprepa lösenord:"
       GridPane.columnIndex="0" GridPane.rowIndex="3"/>

<PasswordField fx:id="passwordField2"
       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

<Label text="Förnamn:"
       GridPane.columnIndex="0" GridPane.rowIndex="4"/>

<TextField fx:id="firstName"
       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

<Label text="Efternamn:"
       GridPane.columnIndex="0" GridPane.rowIndex="5"/>

<TextField fx:id="lastName"
       GridPane.columnIndex="1" GridPane.rowIndex="5"/>

<Label text="E-postadress:"
       GridPane.columnIndex="0" GridPane.rowIndex="6"/>

<TextField fx:id="email"
       GridPane.columnIndex="1" GridPane.rowIndex="6"/>

<Label fx:id="message" visible="false"
       GridPane.columnIndex="1" GridPane.rowIndex="7" />

<VBox GridPane.columnIndex="0" GridPane.rowIndex="8"
      GridPane.columnSpan="2">
    <padding><Insets top="50" right="25" bottom="10" left="25"/></padding>
    <Button fx:id="newUser" text="Skapa konto" alignment="BOTTOM_CENTER" />
</VBox>

</GridPane>