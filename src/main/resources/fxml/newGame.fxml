<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="newGame"
            styleClass="newGame"
            stylesheets="@/css/newGame.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rps.controllers.NewGameWindow"
            prefHeight="400.0" prefWidth="600.0">

    <bottom>
        <Group>
            <Button id="inviteButton"
                    text="Invite friend"
                    focusTraversable="false"
                    onMouseClicked="#inviteFriendButtonClicked"/>
            <Button id="playWithCpu"
                    text="Play with computer"
                    focusTraversable="false"
                    layoutX="100"
                    onMouseClicked="#playWithComputerButtonClicked"/>
            <Button id="addFriend"
                    text="Add friend"
                    focusTraversable="false"
                    layoutX="100"
                    onMouseClicked="#addFriendButtonClicked"/>
        </Group>
    </bottom>


</BorderPane>
